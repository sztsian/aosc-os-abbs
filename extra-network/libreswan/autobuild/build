export ABSRCDIR="$SRCDIR"
unset SRCDIR

make USERCOMPILE="${CPPFLAGS} ${CFLAGS}" \
     USERLINK=${LDFLAGS} \
     INITSYSTEM=systemd \
     USE_NM=true \
     USE_XAUTHPAM=true \
     USE_FIPSCHECK=false \
     USE_LIBCAP_NG=true \
     USE_LABELED_IPSEC=true \
     USE_LDAP=true \
     USE_LIBCURL=true \
     USE_DNSSEC=true \
     INC_USRLOCAL=/usr \
     FINALLIBEXECDIR=/usr/lib/ipsec \
     MANTREE=/usr/share/man \
     programs

make DESTDIR="$PKGDIR" \
     INC_USRLOCAL=/usr \
     FINALLIBEXECDIR=/usr/lib/ipsec \
     MANTREE="$PKGDIR"/usr/share/man \
     INSTMANFLAGS="-m 644" \
     INITSYSTEM=systemd \
     install

export SRCDIR="$ABSRCDIR"
