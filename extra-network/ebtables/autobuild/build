\make CFLAGS="${CPPFLAGS} ${CFLAGS}" \
     LDFLAGS="${LDFLAGS}"
make install \
    DESTDIR="$PKGDIR" \
    LIBDIR=/usr/lib \
    MANDIR=/usr/share/man \
    BINDIR=/usr/bin \
    INITDIR=/etc/rc.d \
    SYSCONFIGDIR=/etc
popd

rm "$PKGDIR"/etc/ebtables-config
rm -r "$PKGDIR"/etc/rc.d

# Hack to convince DEBIAN
install -Dm 644 /dev/null "$PKGDIR"/etc/ebtables.conf
rm "$PKGDIR"/etc/ethertypes
