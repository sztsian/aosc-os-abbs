mkdir build{4,5}

cd build4
cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DUSE_QT4=On \
    -DQT_QMAKE_EXECUTABLE=/usr/lib/qt4/bin/qmake
make
make install DESTDIR="$PKGDIR"

cd ../build5
cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DQT_QMAKE_EXECUTABLE=/usr/lib/qt5/bin/qmake
make
make install DESTDIR="$PKGDIR"
cd ..
